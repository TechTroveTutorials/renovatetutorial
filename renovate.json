{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:base"],
    "regexManagers": [
      {
        "fileMatch": ["^\\.github/workflows/[^/]+\\.yml$"],
        "matchStrings": [
            "uses: (?<depName>[\\w-]+/[\\w-]+/.github/workflows/[\\w-]+)@(?<currentValue>v?\\d+\\.\\d+\\.\\d+)"
        ],
        "datasourceTemplate": "github-tags",
        "versioningTemplate": "semver"
      }
    ]
 }